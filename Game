import java.awt.Canvas;
import java.awt.Color;
import java.awt.Graphics;
import java.awt.image.BufferStrategy;

//this method will hold all aspects of the game


public class Game extends Canvas implements Runnable
{
	private static final long serialVersionUID = -1836269745511707098L;

	final int WIDTH = 720, HEIGHT = 540;
	private Thread thread;
	Handler handler;
	public int frames;
	
	private boolean running = false;
	
	Player user;
	
	public Game()
	{	//add anything new to this method
		
		handler = new Handler();
		this.addKeyListener(new KeyInput(handler));
		
		Window window = new Window(WIDTH, HEIGHT, "Impossible Game", this);
		
		
		user = new Player(100, 0, ID.Dynamic);
		Path path1 = new Path(90, 0, ID.Path);
		Path path2 = new Path(90, 160, 400, 25);
		
		//be sure to add paths before adding user
		handler.add(path1);
		handler.add(path2);
		handler.add(user);
		
	}
	
	public synchronized void start()
	{
		thread = new Thread(this);
		thread.start();
		running = true;
	}
	
	public synchronized void stop()
	{
		try {
			thread.join();
		} catch (Exception e) {
			e.printStackTrace();
		}
	}
	
	//DO NOT TOUCH!!!
	public void run()
	{
		long lastTime = System.nanoTime();
		double amountOfTicks = 60.0;
		double ns = 1000000000 / amountOfTicks;
		double delta = 0;
		long timer = System.currentTimeMillis();
		frames = 0;
		while(running)
		{
			long now = System.nanoTime();
			delta += (now - lastTime)/ns;
			lastTime = now;
			while(delta >= 1)
			{
				tick();
				delta --;			
			}
			if(running)
				render();
			frames++;
			
			if(System.currentTimeMillis() - timer > 1000)
			{
				timer += 1000;
				System.out.println("FPS: " + frames);
				frames = 0;
			}
		}
		stop();
	}
	
	public void tick()
	{
		handler.tick();
	}
	
	public void render()
	{
		BufferStrategy bs = this.getBufferStrategy();
		if(bs == null)
		{
			this.createBufferStrategy(3);
			return;
		}
		
		Graphics g = bs.getDrawGraphics();
		
		g.setColor(Color.WHITE);
		g.fillRect(0, 0, WIDTH, HEIGHT);
		
		handler.render(g);
		
		g.setColor(Color.BLUE);
		g.fillRect(540, 0, 180 , HEIGHT);
		g.setColor(Color.WHITE);
		g.drawString("The Game", 600, 50);
		g.setColor(Color.WHITE);
		// add frames/sec here
		g.dispose();
		bs.show();
	}
	
	public static void main(String args[])
	{
		new Game();
	}
}
