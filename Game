import java.awt.Canvas;
import java.awt.Color;
import java.awt.Graphics;
import java.awt.Graphics2D;
import java.awt.event.ActionListener;
import java.awt.image.BufferStrategy;
import java.awt.image.BufferedImage;
import java.awt.image.ImageObserver;
import java.io.File;
import java.io.IOException;
import java.util.concurrent.TimeUnit;

import javax.imageio.ImageIO;

//this method will hold all aspects of the game


public class Game extends Canvas  implements Runnable, ImageObserver
{
	private static final long serialVersionUID = -1836269745511707098L;

	final int WIDTH = 700, HEIGHT = 525;
	private Thread thread;
	Handler handler;
	//public int frames;
	public Integer frames;
	
	private ActionListener taskPerformer;
	
	private Nothing start;
	
	private boolean running = false;
	private BufferedImage image;
	
	private boolean collision = false;
	private boolean victory = false;
	private Integer level = 1;
	
	Player user;
	
	public Game() 
	{	//add anything new to this method
		
		handler = new Handler();
		this.addKeyListener(new KeyInput(handler));
		
		Window window = new Window(WIDTH, HEIGHT, "Impossible Game", this);
		
		
		
		user = new Player(32, 0, ID.Dynamic);
		//Path path1 = new Path(90, 0, ID.Path);
		//Path path2 = new Path(90, 160, 400, 25);
		
		start = new Nothing(1);
		//be sure to add paths before adding user
		//handler.add(path1);
		//handler.add(path2);
		
		handler.add(start);
		//start.level1();
		this.runSetLevel();
		
		
		handler.add(user);
	
		int delay = 1000; 
	   
		//taskPerformer = new ActionListener();   	
	
	}
	
	//image gen - WiP
	
	
	
	
	
	public synchronized void start()
	{
		thread = new Thread(this);
		thread.start();
		running = true;
	}
	
	public synchronized void stop()
	{
		try {
			thread.join();
		} catch (Exception e) {
			e.printStackTrace();
		}
	}
	
	//DO NOT TOUCH!!!
	public void run()
	{
		this.requestFocus();
		long lastTime = System.nanoTime();
		double amountOfTicks = 60.0;
		double ns = 1000000000 / amountOfTicks;
		double delta = 0;
		long timer = System.currentTimeMillis();
		frames = 0;
		while(running)
		{
			long now = System.nanoTime();
			delta += (now - lastTime)/ns;
			lastTime = now;
			while(delta >= 1)
			{
				tick();
				delta --;			
			}
			if(running)
				render();
			frames++;
			
			if(System.currentTimeMillis() - timer > 1000)
			{
				timer += 1000;
				System.out.println("FPS: " + frames);
				frames = 0;
			}
		}
		stop();
	}
	
	public void tick()
	{
		handler.tick();
		
		//if (user.getPlayerRekt().intersects())
	
		
	   for (int x = 0; x < start.getTheWallsLength() ; x++)
	   {
		  if (this.start.getTheWallAt(x) != null)
		  {
		   
		    this.victory = false;
			  
			  if(user.getPlayerRekt().intersects(start.getTheWallAt(x).getRekt()) && !start.getTheWallAt(x).isAGoal())
		     {     
		      this.collision = true;
		     }
		  
		    else if(user.getPlayerRekt().intersects(start.getTheWallAt(x).getRekt()) && start.getTheWallAt(x).isAGoal())
		     {     
		      this.victory = true;
		      user.resetPlayer();
		     }
		  
		  }
		  
	    if (collision)
	    {
	    	user.addDeath();
	    	user.resetPlayer();
	    	
	    }
	   
	   if (victory)
	   {
		   try {
				               //1000 milliseconds is one second.
			    this.render();
			    TimeUnit.MILLISECONDS.sleep(1000);
			    
		   } 
			catch(InterruptedException ex) 
			{
			  Thread.currentThread().interrupt();
			}
		   
		   
		   
		   this.level++;
	   }
	    
	    
	    collision = false;
	   }
	   
	   
	
	}
	
	
	public static void advanceLevel()
	{
		//Game.levelPlus();
	}
	
	
	
	
	private void runSetLevel()
	{
		if (this.level == 1)
			start.level1();
		
		if (this.level == 2)		
			start.level2();
		
		if (this.level == 3)
			start.level3();
		
		
	}
	
	private void levelPlus()
	{
		this.level++;
	}
	
	
	
	public void renderVictoryScreen()
	{
		//BufferedImage bs = new BufferedImage(1,1,1);
		
				BufferStrategy bs = this.getBufferStrategy();
				if(bs == null)
				{
					this.createBufferStrategy(3);
					return;
				}
				
				//Graphics g = bs.getGraphics();
				
				Graphics g = bs.getDrawGraphics();
		
				user.displayVictoryMessage(g);
				
				try {
					TimeUnit.MILLISECONDS.sleep(1000);              //1000 milliseconds is one second.
				    } 
				catch(InterruptedException ex) 
				{
				  Thread.currentThread().interrupt();
				}
	}
	
	public void render()
	{
		//BufferedImage bs = new BufferedImage(1,1,1);
		
		BufferStrategy bs = this.getBufferStrategy();
		if(bs == null)
		{
			this.createBufferStrategy(3);
			return;
		}
		
		//Graphics g = bs.getGraphics();
		
		Graphics g = bs.getDrawGraphics();
		
		g.setColor(Color.BLACK);
		g.fillRect(0, 0, WIDTH, HEIGHT);
		
		handler.render(g);
		
		
		//start.level1();
		this.runSetLevel();
		user.render(g);
		
		
		
		g.setColor(Color.BLUE);
		g.fillRect(525, 0, 180 , HEIGHT);
		g.setColor(Color.WHITE);
		g.drawString("The Game", 600, 50);
		g.setColor(Color.WHITE);
		// add frames/sec here
		g.drawString("FPS:", 600, 80);
		g.drawString(frames.toString(), 630, 80);
		
		user.displayDeathCount(g);
		
		g.drawString("Level:", 600, 120);
		g.drawString(level.toString(), 650, 120);
		
		if(victory)
		{						
			user.displayVictoryMessage(g);
		
			try {
				TimeUnit.MILLISECONDS.sleep(500);              //1000 milliseconds is one second.
			    } 
			catch(InterruptedException ex) 
			{
			  Thread.currentThread().interrupt();
			}
		}
		
		g.dispose();
		//g.drawImage(bs, 0, 0, WIDTH, HEIGHT, Color.WHITE, null);
		bs.show();
		
		this.victory = false;
	}
	
	public static void main(String args[])
	{
		new Game();
	}
	
	
	
	
	
	
	public static int clamp(int var, int max, int min)
	{
		if(var >= max) return var = max;
		else if(var <= min) return var = min;
		else return var;
	}
}
