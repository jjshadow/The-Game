//Creates the object that the player controls
import java.awt.Color;
import java.awt.Graphics;
import java.awt.Rectangle;

public class Player extends GameObject 
{

	public Integer deathCount = 0;
	
	
	
	
	private Rectangle playerRekt;
	
	
	public Player(int x, int y, ID id) 
	{
		super(x, y, id);
	    
		//xCor = 1;
		//yCor = 0;			
		
		playerRekt = new Rectangle(x,y, 8, 8); 
	}

	
	
	public Rectangle getPlayerRekt()
	{
		return playerRekt;
	}
	
	private void updateRekt(int x, int y)
	{
		playerRekt.setLocation(x,y);
	}
	
	public void resetPlayer()
	{
		this.x = 57;
		this.y = 0;		
	}
	
	
	
	public void addDeath()
	{
		deathCount++;
	}
	
	public void tick()
	{
		x += velX;
		y += velY;
		x = Game.clamp(x,530,-1);
		y = Game.clamp(y,487,-1);
	
	    this.updateRekt(this.x, this.y);
	    
	   // if (this.getPlayerRekt().intersects())
	
	}

	public void render(Graphics g) 
	{
		g.setColor(Color.RED);
		g.fillOval(x, y, 10, 10);
		
		g.setColor(Color.BLACK);
		g.drawString("Deaths:", 400, 80);
		g.drawString(deathCount.toString(), 450, 80);
	}

}
